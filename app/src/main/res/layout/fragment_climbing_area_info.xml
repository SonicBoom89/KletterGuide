<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="?attr/actionBarSize"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp">

    <android.support.v7.widget.GridLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_info_fragment_title"
            android:text="Klettergebiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_column="0"
            card_view:layout_row="0"
            card_view:layout_columnSpan="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"/>

        <TextView
            android:text="Routen "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_column="0"
            card_view:layout_row="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Inverse"/>

        <TextView
            android:id="@+id/txt_info_fragment_routes"
            android:text="14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_column="1"
            card_view:layout_row="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Inverse"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txt_info_fragment_description"
            android:text="Beschreibung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:layout_column="0"
            card_view:layout_row="2"
            card_view:layout_columnSpan="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Inverse"/>

        <TextView
            android:text="Routen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_column="0"
            card_view:layout_row="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Inverse"/>
    </android.support.v7.widget.GridLayout>

</android.support.v7.widget.CardView>
</ScrollView>