<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <android.support.v7.widget.GridLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout android:orientation="horizontal"
            card_view:layout_column="0"
            card_view:layout_row="0"
            android:gravity="center_vertical"
            card_view:layout_columnSpan="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_500"
            >
            <TextView
                android:id="@+id/title"
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/primary_500"
                android:text="Routenname"
                android:drawableLeft="@drawable/ic_route"
                android:drawablePadding="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

            <LinearLayout
                android:gravity="right|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="5dp"
                    android:gravity="right"
                    android:id="@+id/txtDifficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5+"
                    android:background="@drawable/difficulty_background"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    card_view:layout_gravity="right"
                    android:layout_gravity="right" />
            </LinearLayout>

        </LinearLayout>



        <CheckBox
            card_view:layout_column="0"
            card_view:layout_row="1"
            android:id="@+id/AccomplishedRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Route gemeistert"
            android:checked="true"
            android:textColor="@color/cardview_dark_background"
            android:background="@android:color/transparent"
            card_view:layout_gravity="center_horizontal" />


        <CheckBox
            card_view:layout_column="1"
            card_view:layout_row="1"
            android:id="@+id/AccomplishedNachstieg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nachstieg"
            android:checked="true"
            android:textColor="@color/cardview_dark_background"
            card_view:layout_gravity="center_horizontal" />

        <CheckBox
            card_view:layout_column="2"
            card_view:layout_row="1"
            android:id="@+id/AccomplishedVorstieg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vorstieg"
            android:checked="true"
            android:textColor="@color/cardview_dark_background"
            card_view:layout_gravity="center_horizontal" />

    </android.support.v7.widget.GridLayout>
</android.support.v7.widget.CardView>