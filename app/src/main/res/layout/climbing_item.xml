<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:transitionName="@string/transition_climbing_area"
    android:elevation="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/climbingarea"
            android:id="@+id/imageView_climbing_item"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="100dp"/>

        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/semi_green_background"
            android:orientation="vertical">

        <TextView
            android:text="Title"
            android:id="@+id/textView_climbing_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/rating_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>

                <ImageView
                    android:layout_toLeftOf="@+id/textView_climbing_item_distance"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_explore_white_24dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/textView_climbing_item_distance"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:text="2.3 km"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.XSmall"
                    android:layout_alignParentBottom="false"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

        </LinearLayout>

    </FrameLayout>


</android.support.v7.widget.CardView>