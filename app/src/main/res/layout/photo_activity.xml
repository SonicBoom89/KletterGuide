<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_awesome_toolbar"
            android:title="Bild zuordnen"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_700"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
            android:fitsSystemWindows="true" />

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView_cropped_photo"
                android:src="@drawable/routeicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/txt_photo_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hilf uns, dein Foto besser einzuordnen."
                android:layout_below="@id/imageView_cropped_photo"
                android:layout_marginBottom="10dp"
                style="@style/TextAppearance.AppCompat.Inverse"/>

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/spinner_route"
                android:layout_below="@id/txt_photo_header"
                app:ms_multiline="false"
                app:ms_hint="Route auswählen"
                app:ms_floatingLabelText="Route auswählen Floating"
                app:ms_baseColor="@color/blue_grey"
                app:ms_alignLabels="false"
                app:ms_floatingLabelColor="@color/primary_700"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/txt_label_topo"
                android:layout_below="@id/spinner_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Topographie"
                style="@style/TextAppearance.AppCompat.Small.Inverse"/>

            <Button
                android:id="@+id/button_topo"
                android:layout_below="@id/txt_label_topo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Route einzeichnen"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>